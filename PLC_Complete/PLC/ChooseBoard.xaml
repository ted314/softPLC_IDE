<Window x:Class="PLC.ChooseBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLC"
        mc:Ignorable="d"
        Title="ChooseBoard" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Height="40" Width="200" Grid.Row="0" Name="MSP430" Click="Board_Clicked">
            <TextBlock Text="MSP430G2553" FontSize="15"/>
        </Button>
        <Button Height="40" Width="200" Grid.Row="1" Name="LPC2119" Click="Board_Clicked">
            <TextBlock Text="LPC2119 + μC/OS-Ⅱ" FontSize="15"/>
        </Button>
        <Button Height="40" Width="200" Grid.Row="2" Name="STM32" Click="Board_Clicked">
            <TextBlock Text="STM32" FontSize="15"/>
        </Button>
        <Button Height="40" Width="200" Grid.Row="3" Name="Arduino" Click="Board_Clicked">
            <TextBlock Text="Arduino Nano" FontSize="15"/>
        </Button>
    </Grid>
</Window>
